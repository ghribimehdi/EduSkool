{% block body %}
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="p-5 bg-light rounded shadow-sm">
                <div class="mx-auto text-center wow fadeIn" data-wow-delay="0.1s" style="max-width: 700px;">
                    <h4 class="text-primary mb-4 border-bottom border-primary border-2 d-inline-block p-2 title-border-radius">
                        Modifier le devoir
                    </h4>
                    {{ form_start(form) }}

                    {# Si un fichier a déjà été téléchargé, vous pouvez afficher une info à l'utilisateur #}
                    {% if form.fichier.vars.value is not empty %}
                        <div class="alert alert-info">
                            <p>Fichier actuel : {{ form.fichier.vars.value }}</p>
                        </div>
                    {% endif %}

                    <div class="mb-4">
                        {{ form_row(form.fichier, {'attr': {'class': 'form-control py-3'}}) }}
                    </div>

                       {% if form.note is not null %}
                        <div style="display: none;">
                            {{ form_row(form.note) }}
                        </div>
                    {% endif %}

                    <button type="submit" class="w-100 btn btn-primary py-3 mt-3 border-0 shadow-lg rounded-pill">Sauvegarder les modifications</button>
                    {{ form_end(form) }}

                    <a href="/soumission/devoir" class="btn btn-outline-secondary mt-3">Retour à la liste</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}





