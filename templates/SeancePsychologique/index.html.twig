{% extends 'baseAdmin.html.twig' %}

{% block title %}Liste des séances psychologiques{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #FFF0F5;
        }
        .card {
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .btn-pink {
            background-color: #FF69B4;
            border-color: #FF69B4;
            color: white;
        }
        .btn-pink:hover {
            background-color: #FF1493;
            border-color: #FF1493;
            color: white;
        }
        .icon-pink {
            color: #FF69B4;
        }
        .table th {
            color: #FF69B4;
        }
        .badge-pending {
            background-color: #FFA500;
            color: white;
        }
        .badge-accepted {
            background-color: #28a745;
            color: white;
        }
        .badge-refused {
            background-color: #dc3545;
            color: white;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title text-center mb-4 text-pink">
                    <i class="fas fa-clipboard-list icon-pink"></i> Liste des séances psychologiques
                </h1>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Date de la séance</th>
                                <th>Type de séance</th>
                                <th>Durée</th>
                                <th>Participant</th>
                                <th>Psychologue</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for seance in seances %}
                                <tr>
                                    <td>{{ seance.dateSeance|date('d/m/Y H:i') }}</td>
                                    <td>{{ seance.typeSeance }}</td>
                                    <td>{{ seance.duree }} minutes</td>
                                    <td>{{ seance.nomParticipant }}</td>
                                    <td>{{ seance.nomPsychologue }}</td>
                                    <td>
                                        <span class="badge badge-{{ seance.status|lower }}">
                                            {{ seance.status|capitalize }}
                                        </span>
                                    </td>
                                    <td>
                                        <a href="{{ path('app_seance_psychologique_show', {'id': seance.id}) }}" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_seance_psychologique_edit', {'id': seance.id}) }}" class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form action="{{ path('app_seance_psychologique_delete', {'id': seance.id}) }}" method="post" style="display:inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ seance.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7" class="text-center">Aucune séance trouvée.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="text-center mt-4">
                    <a href="{{ path('app_seance_psychologique_new') }}" class="btn btn-pink">
                        <i class="fas fa-plus-circle"></i> Créer une nouvelle séance
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
