{% block body %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #eaeaea;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .admin-login-container {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
            text-align: center;
        }
        h2 {
            color: #d9534f;
        }
        p {
            margin: 10px 0;
        }
        input, button {
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        button {
            background-color: #d9534f;
            color: white;
            font-weight: bold;
            cursor: pointer;
        }
        button:hover {
            background-color: #c9302c;
        }
        a {
            color: #d9534f;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
    </style>

    <div class="admin-login-container">
        <h2>Connexion Admin</h2>

        {% if error %}
            <p style="color: red;">{{ error }}</p>
        {% endif %}

        <form method="post" action="{{ path('app_admin_login') }}">
            <label>Email :</label>
            <input type="email" name="email" value="{{ predefinedEmail }}" required><br>

            <label>Mot de passe :</label>
            <input type="password" name="password" value="{{ predefinedPassword }}" required><br>

            <button type="submit">Se connecter</button>
        </form>
    </div>
{% endblock %}
