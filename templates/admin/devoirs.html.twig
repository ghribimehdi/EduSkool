{% extends 'baseAdmin.html.twig' %}

{% block title %}Gestion des Devoirs{% endblock %}

{% block body %}
<main class="main">
    <div class="pagetitle">
        <h1>Gestion des Devoirs</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="">Home</a></li>
                <li class="breadcrumb-item active">Devoirs</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Liste des Devoirs</h5>
                        <p>Gérez les devoirs assignés aux participants de la plateforme.</p>

                        <!-- Table avec des lignes alternées -->
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th style="width: 10%;">ID</th>
                                    <th style="width: 25%;">Titre</th>
                                    <th style="width: 20%;">Date limite</th>
                                    <th style="width: 30%;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for devoir in devoirs %}
                                    <tr>
                                        <td>{{ devoir.id }}</td>
                                        <td>{{ devoir.titre }}</td>
                                        <td>{{ devoir.datelimite|date('Y-m-d') }}</td>
                                        <td class="text-center">
                                            
                                            
                                            <form action="{{ path('admin_devoir_delete', {'id': devoir.id}) }}" method="post" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce devoir ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ devoir.id) }}">
                                                <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                                            </form>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4" class="text-center">Aucun devoir trouvé.</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                        <!-- Fin Table -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}
