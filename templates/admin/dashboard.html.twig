{% extends 'admin/layout.html.twig' %}

{% block title %}Dashboard Admin{% endblock %}

{% block body %}
    <h2>Liste des utilisateurs</h2>

    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Rôle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles|join(', ') }}</td>
                <td>
                    <a href="{{ path('admin_edit_user', {id: user.id}) }}">Modifier</a> |
                    <a href="{{ path('admin_delete_user', {id: user.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">Supprimer</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="6">Aucun utilisateur trouvé.</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
