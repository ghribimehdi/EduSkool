{% extends 'baseAdmin.html.twig' %}

{% block title %}Gestion des Soumissions{% endblock %}

{% block body %}
<main class="main">
    <div class="pagetitle">
        <h1>Gestion des Soumissions</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="">Home</a></li>
                <li class="breadcrumb-item active">Soumissions</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Liste des Soumissions</h5>
                        <p>Gérez les soumissions des devoirs sur la plateforme.</p>

                        <!-- Table avec des lignes alternées -->
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th style="width: 10%;">ID</th>
                                    <th style="width: 25%;">Devoir</th>
                                    <th style="width: 20%;">Date Soumise</th>
                                    <th style="width: 30%;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for soumission in soumissions %}
                                    <tr>
                                        <td>{{ soumission.id }}</td>
                                        
                                        <td>{{ soumission.dateSoumission|date('Y-m-d') }}</td>
                                        <td class="text-center">
                                            
                                            
                                            <form action="{{ path('admin_soumission_delete', {'id': soumission.id}) }}" method="post" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette soumission ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ soumission.id) }}">
                                                <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                                            </form>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4" class="text-center">Aucune soumission trouvée.</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                        <!-- Fin Table -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}
