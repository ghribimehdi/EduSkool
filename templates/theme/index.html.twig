{% extends 'baseAdmin.html.twig' %}

{% block title %}Theme {% endblock %}

{% block body %}
    <!-- Theme Table Start -->
    <div class="container py-5">
        <h1 class="text-center mb-4">Liste des Thèmes</h1>
        <table class="table table-bordered">
            <thead class="bg-primary text-white">
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for theme in themes %}
                    <tr>
                        <td>{{ theme.id }}</td>
                        <td>{{ theme.titre }}</td>
                        <td>
                            <a href="{{ path('app_theme_show', {'id': theme.id}) }}" class="btn btn-success btn-sm">Afficher</a>
                            <a href="{{ path('app_theme_edit', {'id': theme.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                            {# Formulaire de suppression avec confirmation et token CSRF #}
                            <form action="{{ path('app_theme_delete', {'id': theme.id}) }}" method="post" style="display:inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce thème ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ theme.id) }}">
                                <button class="btn btn-info btn-sm" type="submit">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('app_theme_new') }}" class="btn btn-success">Create new</a>
    </div>
    <!-- Theme Table End -->
{% endblock %}
