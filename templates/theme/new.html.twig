{% extends 'baseAdmin.html.twig' %}

{% block title %}New Theme{% endblock %}

{% block body %}
    


    <!-- Form Start -->
    <div class="container-fluid py-5">
        <div class="container py-5">
            <h4 class="text-primary mb-4 border-bottom border-primary border-2 d-inline-block p-2 title-border-radius">Create New Theme</h4>

            <!-- Formulaire de création de Theme -->
            {% if form is defined %}
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_widget(form) }}
                
                <button type="submit" class="btn btn-primary mt-3">Save</button>
                {{ form_end(form) }}
            {% else %}
                <p>Erreur : le formulaire n'est pas disponible.</p>
            {% endif %}

            <!-- Retour à la liste des Themes -->
            <a href="{{ path('app_theme_index') }}" class="btn btn-secondary mt-3">Back to list</a>
        </div>
    </div>
    <!-- Form End -->

{% endblock %}
