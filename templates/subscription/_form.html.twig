{{ form_start(form, {'attr': {'class': 'form-container shadow-lg p-4 rounded'}}) }}
    <div class="form-group mb-3">
        {{ form_label(form.startDate, 'Start Date', {'attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.startDate, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.startDate) }}
    </div>

    <div class="form-group mb-3">
        {{ form_label(form.endDate, 'End Date', {'attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.endDate, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.endDate) }}
    </div>

    <div class="form-group mb-3">
        {{ form_label(form.status, 'Status', {'attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.status) }}
    </div>


    <button class="btn btn-primary w-100">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
