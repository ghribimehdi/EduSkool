{% extends 'base.html.twig' %}

{% block title %}Connexion Admin{% endblock %}

{% block body %}
    <h2>Connexion Admin</h2>

    {% if error %}
        <p style="color: red;">{{ error }}</p>
    {% endif %}

    <form method="post" action="{{ path('app_admin_login') }}">
        <label>Email :</label>
        <input type="email" name="email" value="{{ predefinedEmail }}" required><br>

        <label>Mot de passe :</label>
        <input type="password" name="password" value="{{ predefinedPassword }}" required><br>

        <button type="submit">Se connecter</button>
    </form>
{% endblock %}
