{% block body %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .login-container {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
            text-align: center;
        }
        h2 {
            color: #2a9d8f;
        }
        p {
            margin: 10px 0;
        }
        input, select, button {
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        button {
            background-color: #2a9d8f;
            color: white;
            font-weight: bold;
            cursor: pointer;
        }
        button:hover {
            background-color: #21867a;
        }
        a {
            color: #2a9d8f;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
    </style>

    <div class="login-container">
        <h2>Connexion</h2>

        {% if error %}
            <p style="color: red;">{{ error }}</p>
        {% endif %}

        <form method="POST" action="{{ path('app_login') }}">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" class="form-control" required>
            </div>
        
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="password" class="form-control" required>
            </div>
        
            <div class="form-group">
                <label for="role">Rôle</label>
                <select id="role" name="role" class="form-control" required>
                    <option value="ROLE_ETUDIANT">Étudiant</option>
                    <option value="ROLE_ENSEIGNANT">Enseignant</option>
                    <option value="ROLE_PSYCHOLOGUE">Psychologue</option>
                </select>
            </div>
        
            <button type="submit" class="btn btn-primary">Se connecter</button>
        </form>
        <p>Pas encore inscrit ? <a href="{{ path('app_inscription') }}">Créer un compte</a></p>
        <p><a href="">Mot de passe oublié ?</a></p>
    </div>
{% endblock %}
